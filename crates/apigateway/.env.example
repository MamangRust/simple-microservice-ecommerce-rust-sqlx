# PostgreSQL Database URL
DATABASE_URL=postgres://user:password@localhost:5432/apigateway

# Server Port
PORT=5000

# JWT Secret Key for signing tokens
JWT_SECRET=your-super-secret-jwt-key

# Auto-run database migrations on startup
RUN_MIGRATIONS=true

# Set to true to use offline SQLx data (requires `cargo sqlx prepare`)
# SQLX_OFFLINE=false

# Development mode flag
DEV_MODE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# SMTP Email Configuration for services like password reset
SMTP_USERNAME=user@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_HOST=smtp.example.com
SMTP_PORT=587

# gRPC Service Addresses
# These should point to the respective microservices
GRPC_AUTH_ADDR=http://localhost:50051
GRPC_USER_ADDR=http://localhost:50052
GRPC_ROLE_ADDR=http://localhost:50053
GRPC_PRODUCT_ADDR=http://localhost:50054
GRPC_ORDER_ADDR=http://localhost:50055

# Kafka Broker Address
KAFKA=localhost:9092
